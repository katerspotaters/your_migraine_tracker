<%= form_for(@medication) do |f| %>
  <% if @medication.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@medication.errors.count, "error") %> prohibited this medication from being saved:</h2>

      <ul>
      <% @medication.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%=f.label :name %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter medication name!" %>
  </div>
  <div class="form-group">
    <%= f.label :dosage_amount %>
    <%= f.number_field :dosage_amount, class: 'form-control', placeholder: "Enter dosage amount!" %>
  </div>
  <div class="form-group">
    <%= f.label :dosage_measurement %>
    <%= f.select(:dosage_measurement, options_for_select([['mg', 'mg'], ['ml', 'ml']])) %>
  </div>
  <div class="form-group">
    <%= f.label :frequency_amount %>
    <%= f.text_field :frequency_amount, class: 'form-control', placeholder: "Enter your frequency here! Ex) 2 pills" %>
  </div>
  <div class="form-group">
    <%= f.label :frequency_measurement %>
    <%= f.select(:frequency_measurement, options_for_select([['every four hours', 'every four hours'], ['every six hours', 'every six hours'], ['every eight hours', 'every eight hours'], ['every twelve hours', 'every twelve hours'], ['per day', 'per day'], ['per week', 'per week'], ['per month', 'per month'], ['every three months', 'every three months'], ['at night', 'at night'], ['in the morning', 'in the morning']])) %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
